@model TravelTrip.Models.Classes.Editor
@{
    ViewBag.Title = "UpdateEditor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Kullanıcı Düzenle</h2>

@using (Html.BeginForm("UpdateEditor", "Admin", FormMethod.Post))
{
    <div class="container" style="margin-top:50px">

        <div class="form-group" hidden="hidden">
            @Html.Label("Editor Id:")
            @Html.TextBoxFor(m => m.editorID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Editor Kullanıcı Ad:")
            @Html.TextBoxFor(m => m.editorUsername, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Editor Ad:")
            @Html.TextBoxFor(m => m.editorFirstname, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Editor Soyad:")
            @Html.TextBoxFor(m => m.editorLastname, new { @class = "form-control" })
        </div>
        <div class="form-group" hidden="hidden">
            @Html.Label("Editor Şifre:")
            @Html.TextBoxFor(m => m.editorPassword, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Editor Mail:")
            @Html.TextBoxFor(m => m.editorEmail, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Editor Açıklama:")
            @Html.TextAreaFor(m => m.editorDetail,5,1, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Editor Fotoğraf:")
            @Html.TextBoxFor(m => m.EditorPhoto, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Editor Durum:")
            @Html.TextBoxFor(m => m.editorState, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-success">Editor Güncelle</button>
        </div>
    </div>
}