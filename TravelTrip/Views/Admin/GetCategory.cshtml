@model TravelTrip.Models.Classes.Category
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Düzenle</h2>

@using (Html.BeginForm("UpdateCategory", "Admin", FormMethod.Post))
{
<div class="container" style="margin-top:50px">

    <div class="form-group" hidden="hidden">
        @Html.Label("Kategori Id:")
        @Html.TextBoxFor(m => m.categoryID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Üst Kategori:")
        @Html.DropDownListFor(model => model.MainCategory.mainCategoryID, (List<SelectListItem>)ViewBag.maincategoryList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Kategori Ad:")
        @Html.TextBoxFor(m => m.categoryName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Kategori Fotoğraf:")
        @Html.TextBoxFor(m => m.categoryPhoto, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button class="btn btn-success">Kategori Güncelle</button>
    </div>
</div>
}
