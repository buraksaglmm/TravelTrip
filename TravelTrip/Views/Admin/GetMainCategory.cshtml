@model TravelTrip.Models.Classes.MainCategory
@{
    ViewBag.Title = "GetMainCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Üst Kategori Düzenle</h2>

@using (Html.BeginForm("UpdateMainCategory", "Admin", FormMethod.Post))
{
    <div class="container" style="margin-top:50px">

        <div class="form-group" hidden="hidden">
            @Html.Label("Üst Kategori Id:")
            @Html.TextBoxFor(m => m.mainCategoryID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Kategori Ad:")
            @Html.TextBoxFor(m => m.mainCategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-success">Üst Kategori Güncelle</button>
        </div>
    </div>
}
