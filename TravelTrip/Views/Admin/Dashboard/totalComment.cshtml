@model TravelTrip.Models.Classes.NewsComments

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="font-weight:800;color:#16a085">En Çok Yorum Alan Haberler</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered" id="New" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Haber Id</th>
                            <th>Haber Kategori</th>
                            <th>Haber Başlık</th>
                            <th>Haber Tarih</th>
                            <th>Editor</th>
                            <th>Yorum Sayısı</th>
                            <th>Habere Git</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Deger3.OrderByDescending(x => x.Comments.Count()).Take(5).ToList())
                    {
                        <tr style="">
                            <th>@item.newID</th>
                            <td>@item.newCategory.categoryName</td>

                            @if (item.newTitle.Length > 40)
                            {
                                <td>@item.newTitle.Substring(0, 40)</td>

                            }
                            else
                            {
                                <td>@item.newTitle</td>
                            }
                            <td>@item.newtime</td>
                            <td>@item.newEditor.editorUsername</td>
                            <td>@item.Comments.Count()</td>
                            <td style="width:120px">
                                <a href="~/New/NewDetail/@item.newID" class="btn btn-default" target="_blank" style="width: 8rem;background:#16a085;color:white;" />Habere Git
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <a href="~/Admin/Comments" class="btn btn-default" target="_blank" style="width: 14rem;background:#16a085;color:white;">Tüm Yorumları Görüntüle</a>
            </div>
        </div>
    </div>
</div>